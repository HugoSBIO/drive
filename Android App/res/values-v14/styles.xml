<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- API 14 theme customizations can go here. -->
        <item name="colorPrimary">@color/appbasetheme_color</item>
        <item name="colorPrimaryDark">@color/appbasetheme_color_dark</item>
        <item name="colorAccent">@color/appbasetheme_color_accent</item>
        <item name="android:textViewStyle">@style/BlackText</item>
    </style>

    <style name="BlackText" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
    </style>

</resources>